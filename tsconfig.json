{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "inlineSources": true,
    "newLine": "lf",
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "stripInternal": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
  },
  "include": [
    "types/ldfetch.d.ts",
    "types/node-resolve-dependency-graph.d.ts",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
